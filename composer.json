{
  "name": "magiclegacy/mtgmelee-client",
  "description": "Component to retrieve data from MtgMelee.com",
  "type": "library",
  "license": "MIT",
  "prefer-stable": true,

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "MagicLegacy\\Component\\MtgMelee\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MagicLegacy\\Component\\MtgMelee\\Tests\\": "tests/"
    }
  },

  "require": {
    "php": ">=7.4",
    "ext-curl": "*",
    "ext-json": "*",

    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/log": "^1.1",

    "thecodingmachine/safe": "^1.3",

    "eureka/component-curl": "^2.0"
  },

  "require-dev": {
    "dg/bypass-finals": "^1.1",
    "phpunit/phpcov": "^8.1.0",
    "phpunit/phpunit": "^9.3",
    "squizlabs/php_codesniffer": "^3.5"
  }
}
